@model Blog_DevIO.Core.ViewModels.Post.PostViewModel

@{
    ViewData["Title"] = "Delete Post";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this post and comments?</h3>

<!-- Post preview-->
<div class="post-preview">
    <a asp-action="Details" asp-route-id="@Model.Id">
        <h2 class="post-title">  @Model.Title </h2>
        <span class="post-subtitle"> @(Model.Content?.Length <= 200 ? Model.Content : Model.Content?.Substring(0, 200))...</span>
    </a>
    <p class="post-meta">
        Posted on
        @Model.Creation.ToString("MMMM dd, yyyy", new System.Globalization.CultureInfo("en-US"))
    </p>
</div>
<!-- Divider-->
<hr class="my-4" />

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
   <a asp-action="Index" class="btn btn-primary text-uppercase">Back to List</a> 
</form>